@{
    ViewData["Title"] = "Suppliers";
}

<div class="text-center">
    <h1 class="display-4">Maintain Suppliers</h1>
</div>
<fieldset class="scheduler-border">
    <legend class="scheduler-border">Search</legend>
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Supplier Name" aria-label="Supplier Name" aria-describedby="basic-addon2" id="supplierName">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button">Search</button>
        </div>
    </div>
</fieldset>

<table id="supplier" style="align: center"></table>
<div id="jqGridPager"></div>

@section scripts {
<script type="text/javascript">

    $.jgrid.defaults.styleUI = 'Bootstrap';
    $.jgrid.defaults.responsive = true;

    $(document).ready(function() {
       $("#supplier").jqGrid({
               url: 'Supplier/GetAll',
               mtype: "GET",
               guiStyle: "bootstrap",
               iconSet: "fontAwesome",
               idPrefix: "gb1_",
               datatype: "json",
               autowidth:true,
               colModel: [
                   {
                        label: "Edit Actions",
                        name: "actions",
                        width: 100,
                        formatter: "actions",
                        formatoptions: {
                            keys: true,
                            editOptions: { },
                            addOptions: { },
                            delOptions: { url: 'Supplier/Delete' }
                        }
                    },
                   { label: 'Supplier Code', name: 'supplierCode', key: true },
                   { label: 'Supplier Name', name: 'name', editable: true, edittype:"text" },
                   { label: 'Address1', name: 'address1', editable: true, edittype:"text" },
                   { label: 'Address2', name: 'address2',editable: true, edittype:"text" },
                   { label: 'City', name: 'city',editable: true, edittype:"text" },
                   { label: 'Province', name: 'province',editable: true, edittype:"text" },
                   { label: 'Postal Code', name: 'postalCode',editable: true, edittype:"text" },
                   { label: 'General Phone', name: 'generalPhone',editable: true, edittype:"text" },
                   { label: 'Contact 1', name: 'contactName',editable: true, edittype:"text" }
               ],
               viewrecords: true,
               height: 250,
               rowNum: 20,
               pager: "#jqGridPager",
               editurl: 'Supplier/Update'
               //onSelectRow: editRow, // the javascript function to call on row click. will use to put the row in edit mode
           });

           $('#supplier').navGrid('#jqGridPager',
               // the buttons to appear on the toolbar of the grid
               { edit: false, add: true, del: false, search: false, refresh: false, view: false, position: "left", cloneToTop: false },
               // options for the Add Dialog
               {
                   closeAfterAdd: true,
                   recreateForm: true,
                   errorTextFormat: function (data) {
                       return 'Error: ' + data.responseText
                   },
                   url: "Supplier/Add"
               });

       });

       $('#supplier').setGridWidth(parseInt($(window).width()) - 20);

       $("#supplierName").on('change keyup paste', function () {
           SearchBySupplierName();
       });

    function SearchBySupplierName()
    {
        //  Fetch the text from our <input> control
        var searchString = $("#supplierName").val();

        //  Prepare to pass a new search filter to our jqGrid
        var f = { groupOp: "AND", rules: [] };

        //  Remember to change the following line to reflect the jqGrid column you want to search for your string in
        //  In this example, I'm searching through the UserName column.

        f.rules.push({ field: "name", op: "cn", data: searchString });

        var grid = $('#supplier');
        grid[0].p.search = f.rules.length > 0;
        $.extend(grid[0].p.postData, { filters: JSON.stringify(f) });
        grid.trigger("reloadGrid", [{ page: 1 }]);
    }

</script>
}