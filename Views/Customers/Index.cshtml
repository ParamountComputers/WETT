                   { label: 'Call Frequency', name: 'callFrequency',fixed:true,editable: true, width:150,edittype:"text",editoptions: {maxlength: 100} },
                   { label: 'Cdos', name: 'cdos',fixed:true,editable: true, width:150,edittype:"text",editoptions: {maxlength: 100} },
                   { label: 'Customer Source', name: 'customerSource',fixed:true,editable: true, width:150,edittype:"text",editoptions: {maxlength: 100} },
                   { label: 'Customer Status Code Navigation', name: 'customerStatusCodeNavigation',fixed:true,editable: true, width:150,edittype:"text",editoptions: {maxlength: 100} },
