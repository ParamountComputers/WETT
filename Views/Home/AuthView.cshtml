@using System.Security.Claims
@model WETT.Models.AuthViewModel

@{
    ViewData["Title"] = "Auth Info";
}

<h1>Auth Info</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAuthenticated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAuthenticated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompileMode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompileMode)
        </dd>
    </dl>
		<h4>Claims:</h4>
	<table border="1">
			<tr>
			<td>Issuer</td>
			<td>Subject</td>
			<td>Type</td>
			<td>Value</td>
			<td>ValueType</td>
			<td>Property Key</td>
			<td>Property value</td>
			</tr>
		@foreach(Claim claim in Model.Claims)
		{
			<tr>
			<td>@claim.Issuer</td>
			<td>@claim.Subject</td>
			<td>@claim.Type</td>
			<td>@claim.Value</td>
			<td>@claim.ValueType</td>
			<td>@claim.Properties.FirstOrDefault().Key</td>
			<td>@claim.Properties.FirstOrDefault().Value</td>
			</tr>
		}
	</table>

</div>